<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"

    tools:context=".BaseActivity">
    <RelativeLayout
        android:id="@+id/container_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/toolbar_layout"/>
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            app:tabTextAppearance="@style/CustomTabText"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:id="@+id/tabLayout"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:tabMode="fixed"
            android:textStyle="bold"
            app:tabGravity="fill"
            android:background="@color/colorWhite"
            app:tabTextColor="@color/colorPrimaryLight"
            app:tabSelectedTextColor="@color/colorPrimary"
            />
    </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:id="@+id/error_container"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/no_internet_access"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:tint="@color/colorGrayDark"
                android:src="@drawable/no_internet_access"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/no_internet_access"/>
        </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabbed_viewPager"
        android:paddingBottom="@dimen/bottom_navigation_height"
        android:animateLayoutChanges="true"
        android:layout_below="@id/toolbar">
    </android.support.v4.view.ViewPager>
    <com.example.gustaf.touchpoint.HelpClasses.NoSwipeViewPager
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        android:paddingBottom="@dimen/bottom_navigation_height"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
    android:id="@+id/viewPager_default">
    </com.example.gustaf.touchpoint.HelpClasses.NoSwipeViewPager>
    </RelativeLayout>
    <include layout="@layout/navigationbar_layout"/>

</android.support.design.widget.CoordinatorLayout>