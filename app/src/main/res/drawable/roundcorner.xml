<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="180"
                android:startColor="@color/colorWhiteTransparent"
                android:endColor="@color/colorGreenPrimary"
                android:centerColor="@color/colorWhiteTransparent"
                android:centerX="0.4"
                android:centerY="0.4"
                android:type="sweep" />
            <size android:width="100dp"
                android:height="100dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/colorWhiteTransparent" />
            <size
                android:width="90dp"
                android:height="90dp"/>
        </shape>

    </item>
    </layer-list>